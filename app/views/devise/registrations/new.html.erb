<style>
  div.text-center {
    height: 100%;
  }
  
  div.text-center {
    display: -ms-flexbox;
    display: flex;
    -ms-flex-align: center;
    align-items: center;
    padding-top: 40px;
    padding-bottom: 40px;
    background-color: #f5f5f5;
  }
  
  .form-signin {
    width: 100%;
    max-width: 330px;
    padding: 15px;
    margin: auto;
  }
  .form-signin .checkbox {
    font-weight: 400;
  }
  .form-signin .form-control {
    position: relative;
    box-sizing: border-box;
    height: auto;
    padding: 10px;
    font-size: 16px;
  }
  .form-signin .form-control:focus {
    z-index: 2;
  }
  .form-signin input[type="email"] {
    margin-bottom: -1px;
    border-bottom-right-radius: 0;
    border-bottom-left-radius: 0;
  }
  .form-signin input[type="password"] {
    margin-bottom: 3px;
    border-top-left-radius: 0;
    border-top-right-radius: 0;
  }
  .bd-placeholder-img {
    font-size: 1.125rem;
    text-anchor: middle;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
  }

  @media (min-width: 768px) {
    .bd-placeholder-img-lg {
      font-size: 3.5rem;
    }
  }
</style>
<div class="text-center">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-signin"}) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <img class="mb-4" src="../img/BJ.png" alt="" width="200" height="165" style="border-radius:10%">
    <h1 class="h3 mb-3 font-weight-normal">註冊</h1>

    <%= f.label :email,"信箱", class: "sr-only" %>
    <%= f.email_field :email, id: "inputEmail", class: "form-control" , autofocus: true, required: true, autocomplete: "email", placeholder: "請輸入註冊信箱" %>
    
    <%= f.label :first_name,"姓氏", class: "sr-only" %>
    <%= f.text_field :first_name, autocomplete: "first_name", class: "form-control", placeholder: "請輸入姓氏" %>
    
    <%= f.label :last_name,"名字", class: "sr-only" %>
    <%= f.text_field :last_name, autocomplete: "email", class: "form-control", placeholder: "請輸入名字" %>

  
    <%= f.label :password,"密碼", class: "sr-only" %>

    <%= f.password_field :password, id: "inputPassword", class: "form-control", required: true , autocomplete: "new-password", placeholder: "請輸入密碼(最少6個字元)" %>
 
    <%= f.label :password_confirmation,"密碼再次確認", class: "sr-only" %>
    <%= f.password_field :password_confirmation, id: "inputPassword", class: "form-control", required: true , autocomplete: "new-password", placeholder: "請輸入再次確認密碼" %>

    <div class="field">
      <%= f.hidden_field :role, :value => 1 %>
    </div> 
 
    <%= f.submit "註冊", class: "btn btn-lg btn-primary btn-block" %>
    
  <% end %>
  <%= render "devise/shared/links" %>
  
</div>
