<h1>加成A</h1>

<%= form_for @plusa , :url => updateplusratea_yfcase_objectbuild_path( @yfcase,@plusa), method: :patch do |f| %>
    <div class="form-group">
        <h3>加成比數</h3>
        <%= f.number_field :plusa, in: 0..10, :step => 0.01,:value => 1.00, :required => true , :class => "form-control" %>
        <small style="color:red;margin:0px;">※ 請依屋況給予加成比數(0.50~1.50)</small>
        <br>
        <small style="color:red;margin:0px;">※ 預設值為1.00</small>
        <hr>
        <h3>加成原因</h3>
        <%= f.text_field :plusa_reason,placeholder: "在此輸入加成原因" , :class => "form-control" %>
        <small style="color:red;margin:0px;">※ 最多只能輸入20個中文字元</small>
        <%= f.hidden_field :surveyora, :value => "#{current_user.first_name}#{current_user.last_name}" %>
    </div>
    
    <div class="form-group">
        <%= f.submit "加成A評分",:class => "btn btn-primary" %>
    </div>

<% end %>
<%= link_to "返回", yfcase_path(@yfcase), class: "btn btn-info" %>

